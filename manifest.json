  "name": "My Progressive Web App",
  "icons": [
    {
      "src": "/icon-192x192.png", // 替换为你的图标路径
      "type": "image/png",
      "sizes": "192x192"
    },
    {
      "src": "/icon-512x512.png", // 替换为你的图标路径
      "type": "image/png",
      "sizes": "512x512"
